{
  "manifest_version": 3,
  "name": "Reclaim Reality",
  "version": "1.0.0",
  "description": "Detect AI-generated, fake, and manipulated content in real-time while browsing the web.",
  "permissions": ["activeTab", "storage","scripting"],
  "host_permissions": ["http://localhost:3000/*", "https://*.vercel.app/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reclaim Reality - Scan this page"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
